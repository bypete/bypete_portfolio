---
import { Image, Picture } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import Halftone16x9A from '~/assets/svg/halftone_16x9_infinity.svg';
import Hero from '~/components/hero/Hero.astro';
import Credit from '~/components/images/Credit.astro';
import HeroPicture from '~/components/images/HeroPicture.astro';
import TocMenu from '~/components/preact/navigation/TocMenu';
import type { Props as HeadProps } from '~/components/SEO/Main.astro';
import FeaturedIcon from '~/components/ui/FeaturedIcon.astro';
import NextPrev from '~/components/ui/NextPrev.astro';
import PageTools from '~/components/ui/PageTools.astro';
import Tags from '~/components/ui/Tags.astro';
import { htmlDateString, readableDate } from '~/js/utils.js';
import BaseLayout from './BaseLayout.astro';

const { post, frontmatter, section, headings, prevPost, nextPost } =
    Astro.props;

const fm = frontmatter || Astro.props;
const opengraph = {
    title: fm.title,
    description: fm.description,
    image: {
        src: fm.og?.image?.src || `/og/${post.id}.png`,
        alt: fm.og?.image?.alt || fm.title,
    },
};

const head: HeadProps = {
    title: fm.title,
    description: fm.description,
    og: opengraph,
    // Articles
    published_time: fm.pubDate,
    author: fm.author,
    section: section ?? undefined,
    tags: fm.tags,
    pageType: 'article',
};

const featured = fm.featured || false;

// Simplify the post before passing to NextPrev component
const formatPostData = (post) => {
    const thumb = post.data.cover
        ? {
              src: post.data.cover.src,
              alt: post.data.cover.alt,
          }
        : undefined;
    const overlay = post.data.logo
        ? {
              src: post.data.logo.light || post.data.logo.src,
              alt: post.data.logo.alt,
          }
        : undefined;
    return {
        title: post.data.title,
        url: `/${post.collection}/${post.id}/`,
        excerpt: post.data.excerpt || post.data.taster || '',
        ...(thumb && { thumb }), // conditional thumbnail
        ...(overlay && { overlay }), // conditional overlay
    };
};

const nextPostData = nextPost ? formatPostData(nextPost) : undefined;
const prevPostData = prevPost ? formatPostData(prevPost) : undefined;
---

<BaseLayout head={head}>
    <main class="@container/main relative">
        <article
            data-layout="content"
            id="content"
            class="layout grid grid-cols-(--gtc-layout) gap-x-(--viewport-safe-inline) outline-hidden"
        >
            <slot name="slothero">
                <Hero config={{ mode: 'work' }} title={frontmatter.title}>
                    <div
                        class="order-2 self-end pl-(--viewport-safe-inline) lg:order-1 lg:mt-safe-top lg:pr-0"
                    >
                        <h1
                            class="chunkyline-surface-raised font-display text-step-6/none font-black uppercase"
                            set:html={frontmatter.title}
                        />
                        <p>{frontmatter.taster}</p>
                    </div>
                    <div
                        class="relative order-1 flex h-full w-full items-center justify-center bg-surface mask-(--mask-blob_1_185) mask-cover mask-bottom-left mask-no-repeat lg:order-2"
                    >
                        <HeroPicture
                            src={frontmatter.cover.src}
                            alt={frontmatter.cover.alt}
                            widths={[400, 960, frontmatter.cover.src.width]}
                            sizes={'100vw, (min-width: var(--container-width-lg)) 50vw, (min-width: 1264px) 56.25vw'}
                            class="h-full w-full object-cover"
                            wrapper={'absolute inset-0 h-full w-full '}
                        >
                            <div
                                class="absolute top-0 left-fluid-m grid grid-cols-(--gtc-icon) items-center gap-tight py-fluid-3xs text-[9px] text-content-light opacity-75 mix-blend-screen"
                            >
                                <Icon
                                    name="lucide:camera"
                                    class="size-fluid-2xs"
                                />
                                <span
                                    set:html={`Credit: ${frontmatter.title}`}
                                />
                            </div>
                        </HeroPicture>
                        {
                            frontmatter.logo && (
                                <Image
                                    src={
                                        frontmatter.logo.light ||
                                        frontmatter.logo.src
                                    }
                                    quality={'high'}
                                    alt={frontmatter.title + ' logo'}
                                    class="relative h-auto w-full max-w-1/3"
                                />
                            )
                        }

                        <ul
                            class="fixed top-headerheight right-safe-inline flex flex-col gap-fluid-m lg:top-0 lg:right-[calc(var(--spacing-fluid-l)+var(--spacing-fluid-m)+var(--spacing-fluid-xs))]"
                        >
                            {
                                featured && (
                                    <li class="relative grid w-fluid-l pt-fluid-s-m pb-fluid-3xs drop-shadow-overlay drop-shadow-shadow-dark/25">
                                        <span class="grid h-fluid-l w-full grid-cols-1 grid-rows-1 items-center justify-center p-fluid-3xs">
                                            <FeaturedIcon />
                                        </span>
                                    </li>
                                )
                            }

                            {
                                frontmatter.title && (
                                    <li>
                                        <Credit
                                            dir={'rtl'}
                                            class="relative"
                                            credit={frontmatter.title}
                                        />
                                    </li>
                                )
                            }
                        </ul>
                    </div>
                </Hero>
            </slot>

            <div
                id="start"
                class="cols-[full] rte grid grid-cols-subgrid gap-y-fluid-m py-fluid-2xl"
            >
                {
                    headings && headings.length > 2 && (
                        <TocMenu
                            class="col-[content]"
                            headings={headings}
                            client:load
                        />
                    )
                }
                {
                    frontmatter.product && (
                        <div class="relative col-[full] grid grid-cols-1 grid-rows-1 items-center *:col-start-1 *:row-start-1">
                            <div class="container mx-auto aspect-super16 md:aspect-cinema">
                                <Picture
                                    src={frontmatter.product.src}
                                    alt={frontmatter.product.alt}
                                    widths={[480, 1200]}
                                    sizes={`100vw, (min-width: 75rem) 75rem`}
                                    class="relative z-10 h-full w-full object-contain"
                                />
                            </div>
                            <div class="pointer-events-none absolute h-[150%] w-full overflow-hidden">
                                <Halftone16x9A
                                    class="absolute h-full w-auto -rotate-5 text-surface-raised opacity-30"
                                    fill="currentColor"
                                    aria-hidden="true"
                                />
                            </div>
                        </div>
                    )
                }
                <slot />
            </div>
            <aside
                class="col-[content] my-fluid-2xl grid grid-cols-1 gap-fluid-s @xl/main:grid-cols-[auto_1fr]"
            >
                <p
                    class="inline-flex items-center gap-x-fluid-3xs text-step--1 text-content-quiet"
                >
                    <Icon
                        name="lucide:calendar"
                        class="inline-block h-4 w-auto"
                    />
                    <span>
                        Last updated:
                        <time
                            datetime={htmlDateString(
                                frontmatter.modDate || frontmatter.pubDate
                            )}
                            >{
                                readableDate(
                                    frontmatter.modDate || frontmatter.pubDate
                                )
                            }
                        </time>
                    </span>
                </p>
                <Tags
                    tags={frontmatter.tags}
                    url={true}
                    class="@xl/main:justify-self-end"
                />
            </aside>
        </article>
        <aside
            data-layout="page"
            class="relative z-(--z-content) container mx-auto mb-fluid-l outline-hidden md:-mb-fluid-l"
        >
            {
                (nextPostData || prevPostData) && (
                    <NextPrev
                        next={nextPostData}
                        prev={prevPostData}
                        class="w-full rounded-tight bg-surface-brand bg-[image:var(--filter-grains)] bg-size-[700px] px-fluid-m py-fluid-xl text-content-dark outline-hidden"
                    />
                )
            }
        </aside>
        <PageTools />
    </main>
</BaseLayout>
