---
import Sprite from '~/assets/svg/filters/sprite.svg?raw';
import Footer from '~/components/layout/Footer.astro';
import Banner from '~/components/preact/layout/Banner';
import OffCanvasNavigation from '~/components/preact/navigation/OffCanvasNavigation';
import CookieNotice from '~/components/preact/overlays/CookieNotice.tsx';
import Overlay from '~/components/preact/overlays/Overlay';
import Underlay from '~/components/preact/overlays/Underlay';
import GoogleTag from '~/components/SEO/GoogleTag.astro';
import GoogleTagNoScript from '~/components/SEO/GoogleTagNoScript.astro';
import MainSEO, { type Props as HeadProps } from '~/components/SEO/Main.astro';
import Accessibility from '~/components/ui/Accessibility.astro';
import { getMainNavigation } from '~/data/navigation.server';
import { footerNavigation } from '~/data/navigation.static';

// Supports weights 200-900
import '@fontsource-variable/reddit-sans-condensed';
// Supports weights 100-900
import '@fontsource-variable/inter';
// Supports weights 200-700
import '@fontsource-variable/readex-pro';

const fm = Astro.props.frontmatter || Astro.props;

const { head = {} } = fm;
const currentPath = new URL(Astro.request.url).pathname;
const isProduction = process.env.NODE_ENV === 'production';
const navItems = await getMainNavigation();
import '~/styles/global.css';
---

<html
    lang="en"
    data-theme="light"
    class="group/page h-full max-w-full scroll-smooth"
>
    <head>
        <MainSEO {...head} />
        <GoogleTag />
    </head>
    <body
        class="relative overflow-x-hidden bg-surface-bedrock font-body text-step-0 text-content antialiased"
        id="top"
    >
        {isProduction && <GoogleTagNoScript />}
        <Accessibility
            a11yLinks={[
                { anchor: '#content', label: 'content' },
                { anchor: '#navigation', label: 'navigation' },
            ]}
        />

        <OffCanvasNavigation
            {currentPath}
            items={navItems}
            footerItems={footerNavigation}
            client:load
        />

        <Overlay client:load />

        <div
            id="wrapperContent"
            class="@container/page relative grid grid-cols-1 grid-rows-[1fr_auto] bg-surface bg-[image:var(--filter-noise)] bg-size-[960px] dark:bg-[image:var(--filter-dark-noise)]"
        >
            <Banner client:load />
            <!-- <Header client:load /> -->
            <Underlay client:load />
            <slot />

            <Footer />
        </div>

        <div
            class="pointer-events-none fixed top-[100svh] z-(--z-toast) grid w-full -translate-y-full grid-cols-1 justify-center gap-fluid-s p-fluid-xs not-dynamic:top-[100vh]"
        >
            <CookieNotice client:load />
        </div>

        <style is:inline>
            /* Alpine.js
---------------------------------------------------------------------------------*/
            [x-cloak],
            [data-cloak] {
                visibility: hidden;
                opacity: 0;
                position: absolute;
            }
        </style>
        <Fragment set:html={Sprite} />
    </body>
</html>

<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        const cloakedElements = document.querySelectorAll('[data-cloak]');
        for (const el of cloakedElements) {
            el.removeAttribute('data-cloak');
        }
    });
    (function () {
        const storedTheme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia(
            '(prefers-color-scheme: dark)'
        ).matches;
        const theme = storedTheme ?? (prefersDark ? 'dark' : 'light');
        if (!storedTheme) {
            localStorage.setItem('theme', theme);
        }

        const metaTags = document.querySelectorAll('meta[name="theme-color"]');

        for (const metaTag of metaTags) {
            metaTag.setAttribute(
                'content',
                theme === 'light' ? 'rgb(255, 255, 255)' : 'rgb(42, 42, 54)'
            );
        }
        document.documentElement.setAttribute('data-theme', theme);
    })();
</script>
