---
import { getCollection } from 'astro:content';
import Tags from '~/components/ui/Tags.astro';
import PlainLayout from '~/layouts/PlainLayout.astro';

const allWorks = await getCollection('work');
const collection = [...allWorks];

let tags = [
    ...new Set(collection.flatMap((post) => post.data.tags)),
] as string[];
const title = 'Tags';
---

<PlainLayout title={title}>
    {tags && <Tags tags={tags} url={true} class="my-fluid-m" />}
</PlainLayout>
