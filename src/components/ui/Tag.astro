---
import { Icon } from 'astro-icon/components';
interface Props {
    featured?: boolean;
}
const { featured = false } = Astro.props;
---

{
    featured && (
        <div class="relative -my-fluid-3xs grid w-fluid-s">
            <div class="pointer-events-none z-10 -mt-px flex items-center justify-center">
                <svg
                    preserveAspectRatio="none"
                    class="absolute -top-[2px] h-[125%] w-full text-featured"
                    width="16"
                    height="32"
                    viewBox="0 0 16 32"
                    fill="currentColor"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path d="M16 0H0V32L8 30L16 32V0Z" fill="currentColor" />
                </svg>

                <Icon
                    name="mdi:star"
                    class="relative mx-auto h-auto w-[80%] text-white"
                />
                <Icon
                    name="mdi:star"
                    class="absolute mx-auto h-auto w-[80%] animate-ping text-white opacity-40"
                />
            </div>
        </div>
    )
}
<slot />
