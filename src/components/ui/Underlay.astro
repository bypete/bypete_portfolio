---
interface Props {
    isHeroDark?: boolean;
    class?: string;
}
const { isHeroDark, class: className } = Astro.props;
const shade = isHeroDark
    ? 'bg-surface-underlay-dark/90'
    : 'bg-surface-underlay-light/90';
---

<div
    id="underlay"
    class:list={[
        'fixed inset-0 z-(--z-underlay) hidden h-full min-h-screen w-full backdrop-blur-xs backdrop-grayscale',
        className,
        shade,
    ]}
    x-cloak
    data-off-canvas-sticky
>
</div>
