---
import { Icon } from "astro-icon/components";
interface Props {
	name: string;
	url: string;
	platform: string;
	wrap?: string;
	css?: string;
	class?: string;
}
const {
	platform,
	url,
	name,
	wrap = "mx-fluid-2xs",
	css = "w-fluid-m h-fluid-m fill-current",
	class: ClassName,
} = Astro.props;
---

<a
    href={`${url}`}
    rel="nofollow"
    class:list={[
        ClassName ? ClassName : 'text-content hover:text-brand',
        wrap && wrap,
    ]}
    title={platform}
>
    <Icon {name} class={css} />
</a>
