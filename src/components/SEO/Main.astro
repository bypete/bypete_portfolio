---
import smartypants from 'smartypants';
import siteInfo from '~/data/site';
import pjson from '~/../package.json';
import Favicon from '../Favicon.astro';

import { SEO } from 'astro-seo';
import { getImage } from 'astro:assets';

export type Props = {
    title?: string;
    description?: string;
    ogTitle?: string;
    ogImage?: {
        src: string;
        alt: string;
    };
    ogDescription?: string;
    canonicalURL?: URL;
    pageType?: 'website' | 'article';
    includeSiteTitle?: boolean;
    isHeroDark?: boolean;

    // Article
    published_time?: string;
    author?: string[];
    section?: string;
    tags?: string[];
};

const {
    title,
    description = siteInfo.description,
    ogTitle = title || siteInfo.og.title,
    ogImage = siteInfo.og.image,
    ogDescription = siteInfo.og.description,
    canonicalURL = new URL(Astro.request.url, Astro.site),
    pageType = 'website',
    includeSiteTitle = true,
    isHeroDark = false,
    // Articles
    published_time,
    author,
    section,
    tags,
} = Astro.props;

let article = {}; // Initialize as an empty object

if (pageType === 'article') {
    article = {
        publishedTime: published_time,
        authors: [`${author}`],
        tags: tags,
        section: section,
    };
}

const resolvedTitle = includeSiteTitle ? `${title} - ${siteInfo.title}` : title;

const resolvedImage = {
    src: new URL(ogImage.src.src || ogImage.src, Astro.site).toString(),
    alt: ogImage.alt,
};

const resolvedOgTitle = smartypants(ogTitle, 1);

---

<!-- High Priority Global Metadata -->
<meta charset="utf-8" />
<meta
    name="viewport"
    content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover"
/>
<title set:html={smartypants(resolvedTitle, 1)} />
<meta name="generator" content={Astro.generator} />
{
    isHeroDark ? (
        <meta name="theme-color" content="#09090b" />
    ) : (
        <meta name="theme-color" content="#ffffff" />
    )
}

<!-- Low Priority Global Metadata -->
<Favicon />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="manifest" href="/site.webmanifest" />
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
<meta name="msapplication-TileColor" content="#00aba9" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" href="/rss.xml" title="RSS" />

<!-- Assets | Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
    href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,700;0,800;1,300;1,400;1,500;1,700;1,800&family=Roboto:ital,wght@0,300;0,400;0,500;0,700;0,900;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet"
/>


<SEO
    description={description}
    canonical={canonicalURL}
    openGraph={{
        basic: {
            title: resolvedOgTitle,
            type: pageType,
            image: resolvedImage.src,
            url: canonicalURL,
        },
        optional: {
            siteName: siteInfo.name,
            description: ogDescription,
        },
        image: {
            alt: ogImage.alt,
        },

        ...(pageType === 'article' &&
            article && {
                article,
            }),
    }}
    extend={{
        // extending the default meta tags
        meta: [{ name: 'version', content: `v${pjson.version}` }],
    }}
/>
