---
import 'swiper/css';
import 'swiper/css/pagination';
import { Icon } from 'astro-icon/components';

interface DataKeys {
    headline: string;
    comment: string;
    cite: string;
    rating: number;
}

export interface Props {
    data: DataKeys[];
}

const { data } = Astro.props;
---

<div class="swiper swiper--reviews">
    <div class="swiper-wrapper not-prose py-fluid-3xl-4xl! flex items-center">
        {
            data.map((review, i) => (
                <div class="slide swiper-slide px-fluid-m flex! items-center justify-center">
                    <blockquote class="md:text-step-1 mx-auto mt-0 max-w-3xl px-0">
                        <p class="font-headline text-step-2 m-0 leading-tight">
                            <strong>{review.headline}</strong>
                        </p>
                        <Fragment set:html={review.comment} />
                        <p class="cite">
                            <span class="mr-fluid-3xs block">
                                {[...Array(5)].map((_, index) => (
                                    <Icon
                                        name="mdi:star"
                                        class={`h-fluid-s inline-block w-auto ${
                                            index < review.rating
                                                ? 'text-gold'
                                                : 'text-content-quiet'
                                        }`}
                                    />
                                ))}
                            </span>
                            {review.cite}
                        </p>
                    </blockquote>
                </div>
            ))
        }
    </div>
    <div
        class="swiper--reviews__pagination bottom-fluid-m! absolute z-10 mx-auto text-center"
    >
    </div>
</div>

<script>
    import Swiper from 'swiper';
    import {
        Navigation,
        Pagination,
        Autoplay,
        Scrollbar,
        EffectCreative,
    } from 'swiper/modules';
    {
        const swiperClass = '.swiper--reviews';
        const swiperReviews = new Swiper(swiperClass, {
            // Install modules
            modules: [
                Navigation,
                Pagination,
                Autoplay,
                Scrollbar,
                EffectCreative,
            ],
            centeredSlides: true,
            effect: 'creative',
            creativeEffect: {
                perspective: false,
                prev: {
                    scale: 0.5,
                    opacity: 0,
                },
                next: {
                    scale: 0.75,
                    opacity: 0,
                },
            },
            speed: 250,
            loop: true,
            slidesPerView: 1,
            pagination: {
                el: `${swiperClass}__pagination`,
                clickable: true,
                bulletClass:
                    'cursor-pointer mx-fluid-3xs transition-all duration-300 inline-block w-fluid-2xs h-fluid-2xs border border-line rounded-full ',
                bulletActiveClass: 'w-fluid-s! bg-primary border-transparent!',
            },
            autoplay: {
                delay: 5000,
            },
        });
    }
</script>
