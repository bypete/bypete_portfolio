---
import { Icon } from 'astro-icon/components';

interface Props {
    class?: string;
    placeholder?: string;
    id: string;
    label: string;
    type: 'text' | 'number' | 'date' | 'email' | 'time';
    required?: boolean;
    readonly?: boolean;
    name: string;
}
const {
    id,
    name,
    label,
    type = 'text',
    class: ClassName,
    placeholder = '',
    required = false,
    readonly = false,
} = Astro.props;

const attrs = {
    id,
    name,
    type,
    class: 'form__input peer w-full placeholder-transparent',
    ...(required && { required: true }),
    ...(readonly && { readonly: true }),
    ...(placeholder && { placeholder }),
};
---

<div
    class:list={['group leading-none', ClassName && ClassName]}
    data-form-group
>
    <div
        class="relative grid grid-cols-1 grid-rows-1 items-center *:col-start-1 *:row-start-1"
    >
        <input {...attrs} />

        <label
            class="pointer-events-none relative left-fluid-2xs -ml-fluid-3xs -translate-y-1/2 self-start justify-self-start bg-surface-raised px-fluid-3xs text-step--1 leading-none font-medium text-content-quiet transition-all peer-placeholder-shown:translate-y-0 peer-placeholder-shown:self-center peer-placeholder-shown:text-step-0 peer-placeholder-shown:text-content peer-focus:-translate-y-1/2 peer-focus:self-start peer-focus:text-step--1"
            for={id}>{label}</label
        >
        {
            type === 'email' && (
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-fluid-2xs">
                    <Icon
                        name="lucide:alert-circle"
                        class="hidden h-fluid-s w-fluid-s text-red-500 group-[.has-error]:block"
                    />
                    <Icon
                        name="lucide:check-circle"
                        class="hidden h-fluid-s w-fluid-s text-green-500 group-[.has-success]:block"
                    />
                </div>
            )
        }
        {
            !required && (
                <span class="-translate-y-full self-start justify-self-end text-step--2/relaxed text-content-quiet">
                    Optional
                </span>
            )
        }
    </div>
    <slot name="help" />
    <div id={`${id}_error`} class="error-message"></div>
</div>
