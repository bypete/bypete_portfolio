---
import type { ContentEntryMap } from 'astro:content';
import { getCollection } from 'astro:content';
import { formatBlogPosts } from '~/libs';

interface Props {
    collection: keyof ContentEntryMap;
    sort?: 'title' | 'date' | 'order';
}

const { collection, sort = 'default' } = Astro.props;

const children = await getCollection(collection);

const sortOptions = {
    filterOutDrafts: true,
    filterOutFuturePosts: true,
    sortByTitle: sort === 'title',
    sortByDate: sort === 'date',
    sortByOrder: sort === 'order',
    limit: undefined,
};
const formattedChildren = formatBlogPosts(children, sortOptions);
const currentPath = Astro.url.pathname;
---

<ul class="relative">
    {
        formattedChildren && (
            <>
                {formattedChildren.map((post) => {
                    const postPath = `/${post.collection}/${post.slug}/`;
                    const isActive = currentPath === postPath;
                    return (
                        <>
                            <li class="m-0 p-0">
                                <a
                                    href={postPath}
                                    title={post.data.title}
                                    class:list={[
                                        'border-l-tight lg:border-r-tight block px-fluid-2xs py-fluid-3xs text-step-0 focus:outline-hidden lg:border-l-0',
                                        isActive
                                            ? 'border-secondary bg-surface font-medium text-content-loud'
                                            : 'border-transparent hover:bg-surface',
                                    ]}
                                    {...(isActive && {
                                        'data-state': 'active',
                                    })}
                                >
                                    {post.data.title}
                                </a>
                            </li>
                        </>
                    );
                })}
            </>
        )
    }
</ul>
