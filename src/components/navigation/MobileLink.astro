---
interface Props {
    title: string;
    url: string;
    isHeroDark: boolean;
    isActive?: boolean;
    class?: string;
}
const { title, url, isHeroDark, isActive, class: className } = Astro.props;
---

<a
    href={url}
    class:list={[
        'font-display hover:text-primary focus:text-primary py-fluid-2xs text-step-3 block w-full leading-tight font-black tracking-tight',
        isActive ? 'text-primary' : 'text-content-light',
    ]}>{title}</a
>
