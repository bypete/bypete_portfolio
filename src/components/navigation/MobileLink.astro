---
interface Props {
    title: string;
    url: string;
    isHeroDark: boolean;
    isActive?: boolean;
    class?: string;
}
const { title, url, isHeroDark, isActive, class: className } = Astro.props;
---

<a
    href={url}
    class:list={[
        'font-display hover:text-primary focus:text-primary block w-full py-fl-space-2xs text-fl-step-3 font-black leading-tight tracking-tight',
        isActive ? 'text-primary' : 'text-content-light',
    ]}>{title}</a
>
