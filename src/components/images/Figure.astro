---
import { Icon } from 'astro-icon/components';

interface Props {
    bg?: string;
    breakout?: boolean;
    caption?: string;
    class?: string;
    credit?: string;
    grid?: string;
}

const {
    bg = 'bg-surface-raised',
    breakout = false,
    caption,
    class: className,
    credit,
    grid = 'grid grid-cols-1 items-center gap-fluid-m',
    ...attrs
} = Astro.props;
---

<figure
    class:list={[
        'not-rte @container/figure relative',
        className ? className : 'my-fluid-l',
        breakout ? 'col-[full]' : 'col-[pullout] rounded-tight',
    ]}
    {...attrs}
>
    <div class:list={[bg, grid]}>
        <slot />
    </div>
    {
        caption && (
            <figcaption class="mt-fluid-xs flex w-full flex-col justify-between gap-fluid-xs text-step--1 text-content-quiet md:flex-row @min-[100vw]/figure:px-safe-inline">
                <p>{caption}</p>
                {credit && (
                    <span class="grid grid-cols-(--gtc-icon) gap-fluid-3xs text-step--2/tight whitespace-nowrap">
                        <Icon
                            name="lucide:camera"
                            class="h-fluid-xs w-fluid-xs"
                        />
                        <Fragment set:html={credit} />
                    </span>
                )}
            </figcaption>
        )
    }
</figure>
