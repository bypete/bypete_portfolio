---
import type { HTMLAttributes } from 'astro/types';
import Breadcrumbs from '~/components/ui/Breadcrumbs.astro';
import type { Props as CTALinks } from '~/components/ui/Button.astro';
import ModePlain from '~/components/hero/ModePlain.astro';
import ModeCover from '~/components/hero/ModeCover.astro';
import ScrollPrompt from '~/components/ui/ScrollPrompt.astro';
import SwipePrompt from '~/components/ui/SwipePrompt.astro';

type HeroTheme = {
    wrapper?: string[];
    hero?: string[];
    mandatory?: string[];
};

export interface VisualKeys {
    src: string | ImageMetadata;
    widths?: number[];
    densities?: number[];
    width?: number;
    sizes?: string;
    alt: string;
    url: string;
    wrapper?: string;
    class?: string;
}

export interface ArtKeys {
    src: string | ImageMetadata;
    media: string;
}

export interface CoverKeys {
    src: string | ImageMetadata;
    artDirectives?: ArtKeys[];
    widths?: number[];
    sizes?: string;
    alt: string;
    url: string;
    wrapper?: string;
    class?: string;
}

interface CTA extends CTALinks {
    text: string;
    jump: boolean;
    href: string;
    icon: string;
}

export interface HeroKeys {
    wrapperClass?: string;
    breadcrumbs?: boolean;
    dark?: boolean;
    bg?: string;
    headline?: string;
    mode?: 'plain' | 'cover' | 'custom';
    class?: string;
    visual?: Partial<VisualKeys>;
    copy?: string;
    cover?: Partial<CoverKeys>;
    legibility?: string;
    overflow?: boolean;
    actions?: CTA[];
    prompt?: 'swipe' | 'scroll';
}

export interface Props extends HTMLAttributes<'div'> {
    title: string;
    heroConfig?: Partial<HeroKeys>;
}

const { title, heroConfig = {}, ...rest } = Astro.props;
const {
    dark = false,
    wrapperClass = '',
    breadcrumbs = false,
    bg = '',
    mode = 'plain',
    class: ClassName = '',
    legibility,
    overflow,
    prompt,
    visual,
    cover,
    headline,
    actions,
    copy,
} = heroConfig as HeroKeys;

const color = legibility || (dark ? 'text-content-light' : 'text-content');
const heroTitle = headline || title;

let inView = {
    'data-inview': `${mode}`,
};

const heroThemes: Record<string, HeroTheme> = {
    plain: {
        wrapper: ['mb-fl-space-xl'],
        hero: [
            'bg-surface-sunken',
            'curveclip',
            'shadow-hero',
            'shadow-surface-sunk',
            'pt-[var(--headerheight)]',
        ],
    },
    image: {
        hero: [''],
    },
    cover: {
        hero: ['bg-surface-sunken', 'shadow-surface-sunk'],
        mandatory: ['shadow-hero', 'curveclip'],
    },
};

const currentHero = heroThemes[mode as keyof typeof heroThemes];
const heroResult = [
    ...(ClassName ? ClassName.split(' ') : currentHero.hero ?? []),
    ...(currentHero.mandatory ?? []),
    overflow && 'overflow-hidden',
    color,
].filter(Boolean); // Filter out any falsey values (e.g., undefined, false)
---

<div
    id="hero"
    class:list={[wrapperClass ? wrapperClass : currentHero.wrapper]}
    {...mode && { 'data-mode': `${mode}` }}
>
    <div
        class:list={[
            'relative flow-root w-full border-b border-transparent outline-none',
            heroResult,
        ]}
        {...inView}
        {...rest}
    >
        {mode === 'plain' && <ModePlain headline={heroTitle} />}

        {
            mode === 'cover' && (
                <>
                    <ModeCover
                        headline={heroTitle}
                        {visual}
                        {cover}
                        legibility={color}
                        {copy}
                        {actions}
                    />
                </>
            )
        }

        <slot />

        {
            prompt && (
                <div class="pointer-events-none absolute bottom-fl-space-s left-1/2 z-100 -translate-x-1/2">
                    {prompt === 'scroll' && <ScrollPrompt />}
                    {prompt === 'swipe' && <SwipePrompt />}
                </div>
            )
        }
    </div>
    {breadcrumbs && <Breadcrumbs title={title} />}
</div>
